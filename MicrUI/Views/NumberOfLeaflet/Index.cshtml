@model IEnumerable<MicrDbChequeProcessingSystem.Models.NumberOfLeaflet>

@{
    var leaflets = Model?.ToList() ?? new List<MicrDbChequeProcessingSystem.Models.NumberOfLeaflet>();
    ViewData["Title"] = "Leaflet Counts";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h5 class="mb-0">Leaflet Count Definitions</h5>
            <small class="text-muted">@leaflets.Count options configured.</small>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" id="numberOfLeafletTable">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Leaflets</th>
                        <th scope="col">Created</th>
                        <th scope="col">Created By</th>
                    </tr>
                </thead>
                <tbody>
                    @if (leaflets.Any())
                    {
                        foreach (var leaflet in leaflets)
                        {
                            <tr>
                                <td class="fw-semibold">@leaflet.NumberOfLeaflet1</td>
                                <td>@leaflet.CreatedDate.ToString("dd MMM yyyy")</td>
                                <td>@leaflet.CreatedByUser?.Fullname</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/duralux/vendors/js/dataTables.min.js" asp-append-version="true"></script>
    <script src="~/duralux/vendors/js/dataTables.bs5.min.js" asp-append-version="true"></script>
    <script>
        $(function () {
            $('#numberOfLeafletTable').DataTable({
                responsive: true
            });
        });
    </script>
}
