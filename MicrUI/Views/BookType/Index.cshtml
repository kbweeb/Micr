@model IEnumerable<MicrDbChequeProcessingSystem.Models.BookType>

@{
    var bookTypes = Model?.ToList() ?? new List<MicrDbChequeProcessingSystem.Models.BookType>();
    ViewData["Title"] = "Cheque Books";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h5 class="mb-0">Cheque Book Types</h5>
            <small class="text-muted">@bookTypes.Count entries available.</small>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" id="bookTypeTable">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Code</th>
                        <th scope="col">Name</th>
                        <th scope="col">Account Type</th>
                        <th scope="col">Leaflets</th>
                        <th scope="col">Transaction Code</th>
                    </tr>
                </thead>
                <tbody>
                    @if (bookTypes.Any())
                    {
                        foreach (var bookType in bookTypes)
                        {
                            <tr>
                                <td class="fw-semibold">@bookType.BookTypeCode</td>
                                <td>@bookType.BookTypeName</td>
                                <td>@bookType.AccountType?.AccountTypeName</td>
                                <td>@bookType.NumberOfLeaflet?.NumberOfLeaflet1</td>
                                <td>@bookType.TransactionCode?.Code</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/duralux/vendors/js/dataTables.min.js" asp-append-version="true"></script>
    <script src="~/duralux/vendors/js/dataTables.bs5.min.js" asp-append-version="true"></script>
    <script>
        $(function () {
            $('#bookTypeTable').DataTable({
                responsive: true
            });
        });
    </script>
}
