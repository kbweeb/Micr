@model IEnumerable<MicrDbChequeProcessingSystem.Models.BankBranch>

@{
    var branches = Model?.ToList() ?? new List<MicrDbChequeProcessingSystem.Models.BankBranch>();
    ViewData["Title"] = "Bank Branches";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h5 class="mb-0">Bank Branch Directory</h5>
            <small class="text-muted">@branches.Count branch records are available.</small>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" id="bankBranchTable">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Branch</th>
                        <th scope="col">Parent Bank</th>
                        <th scope="col">Status</th>
                        <th scope="col">Created</th>
                    </tr>
                </thead>
                <tbody>
                    @if (branches.Any())
                    {
                        foreach (var branch in branches)
                        {
                            <tr>
                                <td class="fw-semibold">@branch.BankBranchName</td>
                                <td>@branch.Bank?.BankName</td>
                                <td>
                                    @if (branch.IsEnabled)
                                    {
                                        <span class="badge bg-success-subtle text-success">Enabled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary-subtle text-secondary">Disabled</span>
                                    }
                                </td>
                                <td>@(branch.CreatedDate?.ToString("dd MMM yyyy") ?? "â€”")</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/duralux/vendors/js/dataTables.min.js" asp-append-version="true"></script>
    <script src="~/duralux/vendors/js/dataTables.bs5.min.js" asp-append-version="true"></script>
    <script>
        $(function () {
            $('#bankBranchTable').DataTable({
                responsive: true
            });
        });
    </script>
}
