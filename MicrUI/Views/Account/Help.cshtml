@{
    ViewData["Title"] = "Help Center";
}

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">Operations Support</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">We are here to help with any question on cheque processing workflows, reconciliations, and clearing schedules.</p>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="border rounded p-3 h-100">
                            <h6 class="fw-semibold"><i class="bi bi-telephone-inbound me-2 text-success"></i>Clearing Desk</h6>
                            <p class="mb-1">+233 (0)30 277 7252</p>
                            <p class="mb-0 text-muted small">Weekdays 08:00 – 18:00 GMT</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded p-3 h-100">
                            <h6 class="fw-semibold"><i class="bi bi-envelope-open me-2 text-success"></i>Support Mailbox</h6>
                            <p class="mb-1">ops@apexbank.com.gh</p>
                            <p class="mb-0 text-muted small">Response within 4 working hours</p>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <h6 class="fw-semibold mb-2">Common Topics</h6>
                <div class="accordion" id="helpTopics">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="topicOne">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#topicOneContent" aria-expanded="true" aria-controls="topicOneContent">
                                Updating bank or branch details
                            </button>
                        </h2>
                        <div id="topicOneContent" class="accordion-collapse collapse show" aria-labelledby="topicOne" data-bs-parent="#helpTopics">
                            <div class="accordion-body">
                                Navigate to <strong>Banks → Branches</strong>, locate the record and use the edit option. Changes reflect instantly across the clearing dashboard.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="topicTwo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#topicTwoContent" aria-expanded="false" aria-controls="topicTwoContent">
                                Resolving cheque validation errors
                            </button>
                        </h2>
                        <div id="topicTwoContent" class="accordion-collapse collapse" aria-labelledby="topicTwo" data-bs-parent="#helpTopics">
                            <div class="accordion-body">
                                Validation errors are logged under <strong>Operations Alerts</strong>. Re-run the MICR scan after confirming the sort code and account type mapping.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="topicThree">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#topicThreeContent" aria-expanded="false" aria-controls="topicThreeContent">
                                Getting monthly clearing reports
                            </button>
                        </h2>
                        <div id="topicThreeContent" class="accordion-collapse collapse" aria-labelledby="topicThree" data-bs-parent="#helpTopics">
                            <div class="accordion-body">
                                Go to <strong>Dashboard → Reports</strong> and select the month. Export is available in PDF or Excel for reconciliation purposes.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h6 class="mb-0">Quick Links</h6>
            </div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action" href="https://www.ghipss.net/" target="_blank" rel="noopener">GHIPSS Resources</a>
                <a class="list-group-item list-group-item-action" href="https://bog.gov.gh" target="_blank" rel="noopener">Bank of Ghana Circulars</a>
                <a class="list-group-item list-group-item-action" asp-controller="Account" asp-action="ReportIssue">Report an operational incident</a>
                <a class="list-group-item list-group-item-action" asp-controller="Account" asp-action="SystemStatus">View live system health</a>
            </div>
        </div>
    </div>
</div>
