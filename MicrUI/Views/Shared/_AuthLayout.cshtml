@{
    var title = string.IsNullOrWhiteSpace(ViewData["Title"] as string)
        ? "Apex Bank ARB Cheque System"
        : (ViewData["Title"] as string);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <link rel="shortcut icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/duralux/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/duralux/css/theme.min.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <style>
        :root {
            --auth-primary: #006B3C;
            --auth-secondary: #004D2D;
            --auth-accent: #D4AF37;
            --auth-bg: #F4FAF4;
            --auth-white: #ffffff;
        }

        body.auth-shell {
            margin: 0;
            min-height: 100vh;
            background: radial-gradient(circle at top, rgba(0, 107, 60, 0.12), transparent 55%),
                        radial-gradient(circle at bottom, rgba(0, 77, 45, 0.12), transparent 60%),
                        var(--auth-bg);
            font-family: "Inter", "Segoe UI", sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .auth-card {
            width: min(420px, 100%);
            background: var(--auth-white);
            border-radius: 18px;
            box-shadow: 0 18px 45px rgba(0, 107, 60, 0.18);
            overflow: hidden;
        }

        .auth-card__header {
            background: linear-gradient(135deg, var(--auth-primary), var(--auth-secondary));
            color: var(--auth-white);
            padding: 2.5rem 2rem 2rem;
            text-align: center;
        }

        .auth-card__header h1 {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .auth-card__header p {
            margin: 0;
            opacity: 0.85;
            font-size: 0.95rem;
        }

        .auth-card__body {
            padding: 2rem;
        }

        .auth-footer {
            padding: 1rem 2rem 2rem;
            text-align: center;
            font-size: 0.85rem;
            color: #5D7A6D;
        }

        .auth-footer a {
            color: var(--auth-primary);
            text-decoration: none;
            font-weight: 600;
        }

        .auth-footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body class="auth-shell">
    <main class="auth-card">
        <div class="auth-card__header">
            <h1>Apex Bank ARB PLC</h1>
            <p>Cheque Processing System</p>
        </div>
        <div class="auth-card__body">
            @RenderBody()
        </div>
        <div class="auth-footer">
            &copy; @DateTime.UtcNow.Year Apex Bank ARB PLC. All rights reserved.
        </div>
    </main>

    <script src="~/duralux/vendors/js/jquery.min.js" asp-append-version="true"></script>
    <script src="~/duralux/vendors/js/bootstrap.min.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
