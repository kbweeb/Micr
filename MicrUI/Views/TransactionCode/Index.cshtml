@model IEnumerable<MicrDbChequeProcessingSystem.Models.TransactionCode>

@{
    var codes = Model?.ToList() ?? new List<MicrDbChequeProcessingSystem.Models.TransactionCode>();
    ViewData["Title"] = "Transaction Codes";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h5 class="mb-0">Transaction Codes</h5>
            <small class="text-muted">@codes.Count codes available.</small>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" id="transactionCodeTable">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Code</th>
                        <th scope="col">Created</th>
                        <th scope="col">Created By</th>
                    </tr>
                </thead>
                <tbody>
                    @if (codes.Any())
                    {
                        foreach (var code in codes)
                        {
                            <tr>
                                <td class="fw-semibold">@code.Code</td>
                                <td>@code.CreatedDate.ToString("dd MMM yyyy")</td>
                                <td>@code.CreatedByUser?.Fullname</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/duralux/vendors/js/dataTables.min.js" asp-append-version="true"></script>
    <script src="~/duralux/vendors/js/dataTables.bs5.min.js" asp-append-version="true"></script>
    <script>
        $(function () {
            $('#transactionCodeTable').DataTable({
                responsive: true
            });
        });
    </script>
}
