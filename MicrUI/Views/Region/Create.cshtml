@model MicrDbChequeProcessingSystem.ViewModels.RegionCreateRequest

@{
    ViewData["Title"] = "Create Region";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="CreateForm" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="RegionName" class="form-label"></label>
        <input asp-for="RegionName" class="form-control" />
        <span asp-validation-for="RegionName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
