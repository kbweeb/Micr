@model IEnumerable<MicrDbChequeProcessingSystem.Models.CustomerProfile>

@{
    var customers = Model?.ToList() ?? new List<MicrDbChequeProcessingSystem.Models.CustomerProfile>();
    ViewData["Title"] = "Customer Profiles";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h5 class="mb-0">Customer Directory</h5>
            <small class="text-muted">@customers.Count profiles available.</small>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" id="customerTable">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Customer</th>
                        <th scope="col">Account Number</th>
                        <th scope="col">Core Banking Name</th>
                        <th scope="col">Branch</th>
                        <th scope="col">Bank</th>
                        <th scope="col">Created</th>
                        <th scope="col">Created By</th>
                    </tr>
                </thead>
                <tbody>
                    @if (customers.Any())
                    {
                        foreach (var customer in customers)
                        {
                            <tr>
                                <td class="fw-semibold">@customer.CustomerName</td>
                                <td class="text-nowrap">@customer.AccountNumber</td>
                                <td>@customer.T24customerName</td>
                                <td>@customer.RequestingBankBranch?.BankBranchName</td>
                                <td>@customer.RequestingBankBranch?.Bank?.BankName</td>
                                <td>@(customer.CreatedDate?.ToString("dd MMM yyyy") ?? "â€”")</td>
                                <td>@customer.CreatedByUser?.Fullname</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/duralux/vendors/js/dataTables.min.js" asp-append-version="true"></script>
    <script src="~/duralux/vendors/js/dataTables.bs5.min.js" asp-append-version="true"></script>
    <script>
        $(function () {
            $('#customerTable').DataTable({
                responsive: true
            });
        });
    </script>
}
